@model PT.Entity.ViewModel.ProfilePasswordViewModel
@{
    ViewBag.Title = $"Profil Ekranı-{Model.ProfileModel.UserName}";
}

<h2 class="text-primary">@Model.ProfileModel.Name @Model.ProfileModel.Surname</h2>
@Html.ValidationSummary()
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Profile", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(x=>x.ProfileModel.UserName)
                @Html.TextBoxFor(x => x.ProfileModel.UserName, new { @class="form-control",placeholder="Kullanıcı Adı",@readonly=true})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ProfileModel.Name)
                @Html.TextBoxFor(x => x.ProfileModel.Name, new { @class = "form-control", placeholder = "Ad" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ProfileModel.Surname)
                @Html.TextBoxFor(x => x.ProfileModel.Surname, new { @class = "form-control", placeholder = "Soyad" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ProfileModel.Email)
                @Html.TextBoxFor(x => x.ProfileModel.Email, new { @class = "form-control", placeholder = "E-mail" })
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" value="Profili Güncelle" class="btn btn-success btn-block" /> 
                </div>
            </div>
            @Html.HiddenFor(x => x.ProfileModel.Id)
        }
    </div>

    <div class="col-md-6">
        @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.PasswordModel.OldPassword)
                @Html.TextBoxFor(x => x.PasswordModel.OldPassword, new { @class = "form-control", placeholder = "Eski Şifre",type="password" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.PasswordModel.NewPassword)
                @Html.TextBoxFor(x => x.PasswordModel.NewPassword, new { @class = "form-control", placeholder = "Yeni Şifre",type = "password" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.PasswordModel.NewPasswordConfirm)
                @Html.TextBoxFor(x => x.PasswordModel.NewPasswordConfirm, new { @class = "form-control", placeholder = "Yeni Şifre Tekrar", type = "password" })
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" value="Şifreyi Güncelle" class="btn btn-success btn-block" />
                </div>
            </div>
            @Html.HiddenFor(x=>x.ProfileModel.Id)
        }
    </div>
</div>

